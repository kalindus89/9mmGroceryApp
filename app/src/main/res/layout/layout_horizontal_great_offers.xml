<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/offers_shop_img"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app_grey" />

    <TextView
        android:id="@+id/offers_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vegetable Junction"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/offers_shop_img"
        app:layout_constraintStart_toStartOf="@+id/offers_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/offers_shop_img" />

    <TextView
        android:id="@+id/offers_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="49 mins"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/offers_shop_img"
        app:layout_constraintStart_toStartOf="@+id/offers_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/offers_shop_name" />

    <TextView
        android:id="@+id/offers_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30% OFF"
        android:textColor="#FF9800"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/offers_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/offers_time" />

    <TextView
        android:id="@+id/offers_rating"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="3.6"
        android:gravity="center"
        android:textAlignment="center"
        android:backgroundTint="#4caf50"
        android:textColor="@color/white"
        android:background="@drawable/round_border"
        app:layout_constraintBottom_toBottomOf="@+id/offers_shop_img"
        app:layout_constraintEnd_toEndOf="@+id/offers_shop_img"
        app:layout_constraintStart_toStartOf="@+id/offers_shop_img"
        app:layout_constraintTop_toTopOf="@+id/offers_shop_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>